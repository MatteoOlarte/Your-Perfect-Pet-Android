<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardElevation="5dp"
    tools:ignore="hardCodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center|start">


        <ImageView
            android:id="@+id/pet_public_view_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/example_pet_1" />

        <Space
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/pet_public_view_name"

            style="@style/ImportantTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Name"/>

        <TextView
            android:id="@+id/pet_public_view_race"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Race"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/pet_public_view_description"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginBottom="5dp"
            android:text="Sample description: Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."/>

        <TextView
            android:id="@+id/pet_public_view_applied_vaccines"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Vaccines"/>

        <TextView
            android:id="@+id/pet_public_view_applied_owner"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Owner"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="center|end">

            <com.google.android.material.button.MaterialButton
                android:text="Localizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>